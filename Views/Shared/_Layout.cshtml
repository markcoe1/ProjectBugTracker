<!DOCTYPE html>
<html>
<head>
    @using ProjectBugTracker.Models
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ProjectBugTracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--DataTables-->
    @*@Scripts.Render("~/bundles/jquery")*@
    <link href="~/DataTables-1.10.9/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/DataTables-1.10.9/js/jquery.dataTables.min.js"></script>

    <!--FontAwesome-->
    <link href="~/font-awesome-4.4.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>


    <div id="navbar" class="navbar navbar-inverse navbar-fixed-top" style="padding-left:10px; padding-right:10px; opacity:0.7">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
        </div>
                    <div class="navbar-collapse collapse">
                         <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Project Bug Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                            <li>@Html.ActionLink("Landing", "Landing2", "Home")</li>
                            <li>@Html.ActionLink("Submit", "Create", "Tickets")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")

                    </div>
                </div>
            </div>
    <div class="container body-content" style="padding-top:50px">
        @RenderBody()

        <hr />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Designed by Mark Glauberman-Coe</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


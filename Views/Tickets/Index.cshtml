@model IEnumerable<ProjectBugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Ticket Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="TicTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Project Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                Type
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
            <th>
                Owner
            </th>
            <th>
                Assigned To
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Projects.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPrioritys.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatuses.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedUser.DisplayName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Comments", "Index", "TicketComments")
                    @Html.ActionLink("Attachments","Index","TicketAttachments")
                </td>
            </tr>

        }
</tbody>
</table>

<script>
    $('#TicTable').DataTable();
</script>